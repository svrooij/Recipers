{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Recipers.Api",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build Recipers.Api",
      "program": "${workspaceFolder}/src/Recipers.Api/bin/Debug/net9.0/Recipers.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Recipers.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(http://\\S+)",
        "uriFormat": "%s/scalar/"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/Recipers.Api/Views"
      }
    }
  ]
}
